<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#20FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="@dimen/dp10"
        card_view:cardElevation="@dimen/dimen_0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp12"
            android:paddingHorizontal="@dimen/dp16"
            android:background="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/dp37"
                    android:layout_height="@dimen/dp37"
                    android:alpha="0.2"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvGetStarted"
                    app:layout_constraintBottom_toBottomOf="@id/tvEnterNo"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvGetStarted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_bold"
                    android:text="@string/transaction_history"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEnterNo"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/deposits_withdrawals_tax_summaries"
                    android:textColor="#99ffffff"
                    android:textSize="@dimen/sp12"
                    app:layout_constraintStart_toStartOf="@id/tvGetStarted"
                    app:layout_constraintTop_toBottomOf="@id/tvGetStarted" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>