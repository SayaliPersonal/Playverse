<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        tools:context=".feature.presentation.view.login.ReferralCodeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottmsheet_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <View
                android:layout_width="@dimen/dp49"
                android:layout_height="@dimen/dp4"
                android:layout_marginTop="@dimen/dp12"
                android:background="@drawable/round_corner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReferralsCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp48"
                android:fontFamily="@font/exo_bold"
                android:text="@string/apply_code_to_get_rewards"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCash"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp32"
                android:fontFamily="@font/oxygen_regular"
                android:gravity="center_horizontal"
                android:text="@string/enter_friend_referral_code_to_get_50_deposit_cash"
                android:textColor="@color/white_opacity60"
                android:textSize="@dimen/sp14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvReferralsCode" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReferralCodeValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingEnd="@dimen/dp20"
                app:layout_constraintBottom_toBottomOf="@+id/etReferralCode"
                app:layout_constraintEnd_toEndOf="@+id/etReferralCode"
                app:layout_constraintTop_toTopOf="@+id/etReferralCode" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etReferralCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="44dp"
                android:background="@drawable/bg_edittext_login"
                android:fontFamily="@font/oxygen_bold"
                android:gravity="center_vertical|start"
                android:hint="@string/enter_referral_code"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp19"
                android:paddingStart="@dimen/dp24"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#4dffffff"
                android:textCursorDrawable="@color/white"
                android:textSize="@dimen/sp18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCash" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReferral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp48"
                android:background="@drawable/ic_img_referral"
                android:fontFamily="@font/exo_bold"
                android:text="@string/apply"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/sp12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etReferralCode" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>