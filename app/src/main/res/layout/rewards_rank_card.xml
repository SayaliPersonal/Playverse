<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp5"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_transparent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/dp8"
            android:paddingVertical="@dimen/dp5"
            android:background="@drawable/card_view_purple_gradient">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/your_score_title"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:fontFamily="@font/oxygen_regular"
                android:text="Rank 1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rank_coin"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:src="@drawable/ic_rank_coin"
                android:text="@string/your_score"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/your_score_title"
                app:layout_constraintTop_toBottomOf="@id/your_score_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_rank_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_bold"
                android:gravity="center"
                android:text="50"
                android:layout_marginLeft="@dimen/dp2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp22"
                app:layout_constraintBottom_toBottomOf="@id/rank_coin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/rank_coin"
                app:layout_constraintTop_toTopOf="@id/rank_coin"
                app:layout_constraintVertical_bias="0.555" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>